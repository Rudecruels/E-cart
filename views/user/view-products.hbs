
    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card" style="width: 15rem; height: 100%;">
                        <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap " style="height: 25rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">{{this.Discription}}</p>
                            <button onclick="addToCart('{{this._id}}')">Add to Cart</button>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </section>
